<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/header"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="11dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="韭菜盒子辛作发"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="#242424"/>
            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="大胃王"
                android:textSize="12sp"
                android:gravity="left"
                android:textColor="#9f9f9f"/>
        </LinearLayout>
    </LinearLayout>



    <FrameLayout
        android:id="@+id/player_container"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="27dp"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:scaleType="fitXY"
        android:background="@android:color/black"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="parent">

        <com.dueeeke.videocontroller.component.PrepareView
            android:id="@+id/prepare_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/comment"/>
            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:layout_marginLeft="3dp"
                android:textColor="#161616"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/collect_style"/>
            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:layout_marginLeft="3dp"
                android:textColor="#161616"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp">
            <ImageView
                android:id="@+id/iv_dianzan"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/dianzan_style"/>
            <TextView
                android:id="@+id/tv_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:layout_marginLeft="3dp"
                android:textColor="#161616"
                android:textSize="14sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>